<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- gazebo args -->
  <arg name="world_name" default="$(find lar_gazebo)/worlds/lar.world" doc="Default world"/>-->
  <arg name="paused" default="true" doc="Starts gazebo in paused mode" />
  <arg name="gui" default="true" doc="Starts gazebo gui" />
  <arg name="scan_topic" default="front/scan" />

  <!-- include gazebo_ros launcher -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>

  <include file="$(find husky_gazebo)/launch/spawn_husky.launch">
    <!-- Optionally configure the spawn position -->
    <arg name="x" value="-4"/>
    <arg name="y" value="0"/>
    <arg name="z" value="0"/>
    <arg name="yaw" value="0"/>
  </include>

  <node name="map_server" pkg="map_server" type="map_server" args="$(find lar_gazebo)/map/lar_map.yaml" output="screen" respawn="true">
    <param name="frame_id" value="map"/>
  </node>

  <include file="$(find husky_navigation)/launch/gmapping.launch">
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <remap from="scan" to="$(arg scan_topic)"/>
    </node>
  </include>
  
  <include file="$(find husky_navigation)/launch/amcl.launch">
    <node pkg="amcl" type="amcl" name="amcl" output="screen">
        <param name="set_initial_pose" value="true"/>
        <param name="initial_pose" value="{x: -4.0, y: 0.0, z: 0.0, yaw: 0.0}"/>
        <param name="use_map_topic" value="true"/>
        <param name="map_topic" value="map"/>
    </node>
  </include>
</launch>
